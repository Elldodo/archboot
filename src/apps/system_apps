#!/bin/bash

#                         ARCH LINUX PACKAGES
# ============================================================================

# Arch Linux
export ARCH="base base-devel linux-firmware nano htop fail2ban"

# Kernel (the one you like)
export LINUX="linux"
export LINUX_HARDENED="linux-hardened"
export LINUX_LTS="linux-lts"
export LINUX_ZEN="linux-zen"

# Microcode
export INTEL_UCODE="intel-ucode"
export AMD_UCODE="amd-ucode"

# Network
export NETAPPS="ntp networkmanager wget nmap dhclient \
nginx openssl certbot certbot-nginx"

# Reflector
export REFLECTOR="reflector"

# Bootloader (BIOS only)
export GRUB="grub os-prober"

