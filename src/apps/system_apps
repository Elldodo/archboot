#!/bin/bash

#                         ARCH LINUX PACKAGES
# ============================================================================

# Arch Linux
export ARCH="base linux-firmware sudo"

# Base devel (AUR only)
export BASE_DEVEL="base-devel"

# Kernel (optional)
export LINUX="linux"
export LINUX_HARDENED="linux-hardened"
export LINUX_LTS="linux-lts"
export LINUX_ZEN="linux-zen"

# Microcode (matching CPU)
export INTEL_UCODE="intel-ucode"
export AMD_UCODE="amd-ucode"

# Network
export NETAPPS="networkmanager wget git \
net-tools nmap dhcpcd tcpdump ntfs-3g unzip gcc make cmake qbs pkgconf nano s-nail msmtp msmtp-mta perl python2 moreutils sudo ruby-bundler htop fail2ban rsnapshot \
openssl openssh openvpn easy-rsa certbot certbot-nginx samba htop nginx imagemagick jenkins jdk8-openjdk ghostscript graphviz libreoffice-fresh-fr poppler poppler-data python-pip python-virtualenv redis \
supervisor tesseract tesseract-data-fra nginx postgresql perl-image-exiftool libasound libpulse"

# Ntp (optional)
export NTP="ntp"

# Bootloader (BIOS only)
export GRUB="grub os-prober"

