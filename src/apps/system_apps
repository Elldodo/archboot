#!/bin/bash

# SYSTEM APPLICATIONS
# ============================================================================

# Arch Linux
export _arch="base base-devel linux-firmware"

# Kernel
export _default_kernel="linux"
export _hardened_kernel="linux-hardened"
export _lts_kernel="linux-lts"
export _zen_kernel="linux-zen"

# Microcode (in case of Intel CPU)
export _intel="intel-ucode"

# Network
export _netapps="ntp networkmanager wget nmap rp-pppoe dhclient \
iw wpa_supplicant wireless_tools openvpn subversion git gitolite exfat-utils rsnapshot gcc make llvm qbs jenkins htop cronie zsh redshift p7zip nano unzip jdk8-openjdk gradle gdb inetutils"

# Bootloader
export _bootapps="grub os-prober gptfdisk efibootmgr"
