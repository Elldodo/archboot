#!/bin/bash

# SYSTEM APPLICATIONS
# ============================================================================

# Arch Linux
export _arch="base linux nano htop fail2ban"

# Microcode (in case of Intel CPU)
export _intel="intel-ucode"

# Network
export _netapps="nginx fontconfig libx11 pcre2 double-conversion mesa-libgl \
libxi libsm xcb-util-renderutil xcb-util-image xcb-util-keysyms xcb-util-wm libxkbcommon-x11 openssl"

# Bootloader
export _bootapps="grub os-prober"
