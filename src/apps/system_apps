#!/bin/bash

# SYSTEM APPLICATIONS
# ============================================================================

# Arch Linux
export _arch="base base-devel mkinitcpio"

# Microcode (in case of Intel CPU)
export _intel="intel-ucode"

# Network
export _netapps="ntp networkmanager wget nmap rp-pppoe dhclient htop nginx \
fontconfig libx11 pcre2 double-conversion mesa-libgl libxi libsm xcb-util-renderutil xcb-util-image xcb-util-keysyms xcb-util-wm libxkbcommon-x11 openssl-1.0"

# Bootloader
export _bootapps="grub os-prober"
