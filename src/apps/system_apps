# NTFS support (optional)
export NTFS_SUPPORT="ntfs-3g"

# Network
export NET_MANAGER="networkmanager networkmanager-openvpn"
export NETAPPS="net-tools iw wpa_supplicant wireless_tools wget git openvpn subversion gitolite exfat-utils rsnapshot gcc make llvm qbs jenkins htop cronie zsh p7zip nano unzip jdk8-openjdk gradle gdb inetutils diffstat chrpath xterm rpcsvc-proto socat cpio patch"

