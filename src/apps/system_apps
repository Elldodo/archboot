#!/bin/bash

# SYSTEM APPLICATIONS
# ============================================================================

# Arch Linux
export _arch="base base-devel linux"

# Microcode (in case of Intel CPU)
export _intel="intel-ucode"

# Network
export _netapps="ntp networkmanager wget nmap dhclient \
iw wpa_supplicant wireless_tools git gitolite exfat-utils rsnapshot qbs jenkins htop cronie zsh redshift p7zip"

# Bootloader
export _bootapps="grub os-prober gptfdisk efibootmgr"
