#!/bin/bash

# SYSTEM APPLICATIONS
# ============================================================================

# Arch Linux
export _arch="base linux"

# Microcode (in case of Intel CPU)
export _intel="intel-ucode"

# Network
export _netapps="ntp networkmanager wget nmap dhclient nano htop fail2ban git openssl openssh openvpn mariadb rvm certbot certbot-nginx samba ntp networkmanager wget nmap rp-pppoe dhclient htop nginx redmine imagemagick gitolite jenkins"

# Bootloader
export _bootapps="grub os-prober"
